@import "../../../node_modules/kouto-swiss"
@import "_includes/grid"

#header {
	height: 200px;
	background-color: #ff008a;
	margin-bottom: 1em;
}

.product-row {
	padding: 1em 0;
}

.product-block {
	img {
		transition: opacity 250ms ease-in-out;
		width: 100%;
		height: auto;
		opacity: 100%;
	}
	&:hover {
		img {
			opacity: 0.5;
		}
	}
}